<h1 class="text-center mt-4">Usuarios CRM REMCO</h1>

<% if current_user.admin? %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xs-12">
                <%= link_to "Registrar Usuario", signup_path, class: "btn btn-success btn-lg" %>
            </div>
        </div>
    </div>
<% end %>

<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>

<div class="container">
    <% @users.each do |user| %>
        <div class="row justify-content-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-header font-italic">
                        <h2><%= link_to user.username, user %></h2>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= user.email %>
                        </h5>
                        <p class="card-text">Conteo de llamadas pluralize(user.articles.count, "article")</p>
                        <%= link_to 'Ver perfil', user, class: "btn btn-outline-success" %>
                        <% if logged_in? && (user == current_user || current_user.admin?) %>
                            <%= link_to 'Editar perfil', edit_user_path(user), class: "btn btn-outline-info" %>
                        <% end %>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Joined <%= time_ago_in_words(user.created_at) %></small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>

<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>