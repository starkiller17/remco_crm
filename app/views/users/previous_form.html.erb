<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @user%>
            <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :username, 'Usuario', class: "col-2 col-form-label text-light" %><br />
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Ingresa un nombre de usuario" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :email, class: "col-2 col-form-label text-light" %><br />
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Ingresa tu correo electrónico" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :password, 'Contraseña', class: "col-2 col-form-label text-light" %><br />
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Escoge tu contraseña" %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit(@user.new_record? ? "Crear usuario" : "Actualizar perfil", class: "btn btn-outline-light btn-lg") %>
                </div>
            <% end %>
        </div>
    </div>
</div>