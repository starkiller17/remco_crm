<section class="container white">
    <div class="row">
        <div class="col-xs-12 mt-3 ml-3 mb-3">
            <%= link_to new_payment_method_path, :rel => 'noopener noreferrer' do %>
                <button type="button" class="btn btn-success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1.5em" height="1.5em" fill="white" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
                    </svg>
                    Métodos de Pago
                </button>
            <% end %>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover" id="payment_methods_table">
            <thead>
                <tr>
                    <th>Método de Pago</th>
                    <th>Estatus</th>
                    <th>Fecha Creación</th>
                    <th>Autor</th>
                    <th>Fecha Actualización</th>
                    <th>Actualizado</th>
                    <% if logged_in? && current_user.admin? %>
                        <th>Editar</th>
                    <% end %>
                </tr>
            </thead>
            <tbody>
                <% @payment_methods.each do |payment_method| %>
                    <tr>
                        <td><%= payment_method[:payment_method] %></td>
                        <td><%= payment_method[:status] %></td>
                        <td><%= payment_method[:created_at] %></td>
                        <td><%= payment_method[:created_by] %></td>
                        <td><%= payment_method[:updated_at] %></td>
                        <td><%= payment_method[:updated_by] %></td>
                        <% if logged_in? && current_user.admin? %>
                            <td>
                                <%= link_to edit_payment_method_path(payment_method) do %>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1.5em" height="1.5em" fill="yellow" class="bi bi-pencil-fill pointer" viewBox="0 0 16 16">
                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                                    </svg>
                                <% end %>
                            </td>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</section>

<script type="application/javascript">
    var dataTable = $("#payment_methods_table").DataTable({responsive: true});
    document.addEventListener("turbolinks: before-cache", function() {
        if(dataTable != null) {
            dataTable.destroy();
            dataTable = null;
        }
    });
</script>