<section class="container control-box">
    <div class="row">
        <div class="mt-3 mb-3 col-lg-12 col-xs-12">
            <%= form_with(model: @classification, local: true) do |f| %>
                <%= render 'shared/errors', obj: @classification %>
                <% if @classification.new_record? %>
                    <%= f.hidden_field :created_by, value: current_user.username %>
                <% end %>

                <%= f.hidden_field :updated_by, value: current_user.username %>

                <div class="row">
                    <%= f.label :classification, "Clasificación", class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= f.text_field :classification, class: "form-control upcase", required: true %>
                    </div>
                </div>

                <div class="row">
                    <%= f.label :status, "Estatus", class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10 mt-2">
                        <%= f.radio_button :status, "ACTIVO", checked: true %>
                        <%= f.label :status, "Activo" %>
                        <%= f.radio_button :status, "INACTIVO" %>
                        <%= f.label :status, "Inactivo" %>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-xs-12">
                        <%= f.submit(@classification.new_record? ? "Agregar Categoría" : "Actualizar Categoría", class: "btn btn-success nuevo") %>
                    </div>
                </div>

            <% end %>
        </div>
    </div>
</section>